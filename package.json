  "author": "Bruno Henrique Paiva",
  "license": "MIT",
  "dependencies": {
    "better-sqlite-pool": "^0.2.2",
    "discord.js": "^11.4.2",
    "dotenv": "^6.2.0",
    "enmap": "^4.8.5",
    "node-schedule": "^1.3.2",
    "ts-node": "^8.1.0",
    "typescript": "^3.4.5"
  },
  "devDependencies": {
    "@types/dotenv": "^6.1.1",
    "@types/node-schedule": "^1.2.3",
    "@typescript-eslint/eslint-plugin": "^1.7.0",
    "babel-eslint": "^10.0.1",
    "eslint": "^5.13.0",
    "eslint-config-prettier": "^4.2.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.3",
    "nodemon": "^1.19.0",
    "prettier": "^1.16.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
